{
  "manifest_version": 3,
  "name": "Host Switcher",
  "version": "1.0",
  "description": "Quickly switch between different host environments",
  "permissions": ["activeTab", "tabs", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
